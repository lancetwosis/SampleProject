<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Telerik.Windows.Themes.Office2019;component/Themes/Telerik.Windows.Controls.Pivot.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Telerik.Windows.Themes.Office2019;component/Themes/Telerik.Windows.Controls.PivotFieldList.xaml" />
        <!--<ResourceDictionary Source="pack://application:,,,/Telerik.Windows.Themes.Office2019;component/Themes/Telerik.Windows.Controls.Docking.xaml" />-->
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="girdViewComboBoxEditStyle"
           BasedOn="{StaticResource RadComboBoxStyle}"
           TargetType="telerik:RadComboBox">
        <Setter Property="IsFilteringEnabled" Value="True" />
        <Setter Property="StaysOpenOnEdit" Value="True" />
        <Setter Property="TextSearchMode" Value="Contains" />
        <Setter Property="OpenDropDownOnFocus" Value="True" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="TicketFieldItemTemplate">
        <TextBlock Text="{Binding}"
                   ToolTip="{Binding ToolTip}" />
    </DataTemplate>

</ResourceDictionary>
