<UserControl x:Class="RedmineTimePuncher.Views.Settings.CreateTicket.CreateTicketSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors1="clr-namespace:LibRedminePower.Behaviors;assembly=LibRedminePower"
             xmlns:conv="clr-namespace:LibRedminePower.Converters;assembly=LibRedminePower"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:libCont="clr-namespace:LibRedminePower.Views.Controls;assembly=LibRedminePower"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:props="clr-namespace:RedmineTimePuncher.Properties"
             xmlns:settings="clr-namespace:RedmineTimePuncher.Views.Settings"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:vm="clr-namespace:RedmineTimePuncher.ViewModels.Settings.CreateTicket"
             d:DataContext="{d:DesignInstance {x:Type vm:CreateTicketSettingsViewModel},
                                              IsDesignTimeCreatable=True}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <conv:StringIsNullOrEmptyToBooleanConverter x:Key="StringIsNullOrEmptyToBooleanConverter" />
        <Style BasedOn="{StaticResource FilterableComboBoxStyleKey}"
               TargetType="telerik:RadComboBox" />
    </UserControl.Resources>

    <libCont:OverwrapMessage Message="{Binding ErrorMessage.Value}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer BorderThickness="0"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Grid.IsSharedSizeScope="True">
                    <Grid ToolTip="{Binding DetectionProcess.Value.NoCustomFieldErrMsg.Value}">
                        <Grid IsEnabled="{Binding DetectionProcess.Value.NoCustomFieldErrMsg.Value, Converter={StaticResource StringIsNullOrEmptyToBooleanConverter}, Mode=OneWay}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"
                                                  SharedSizeGroup="FirstColumn" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="AUTO" />
                                <RowDefinition Height="AUTO" />
                            </Grid.RowDefinitions>
                            <CheckBox x:Name="useTargetProcessCheckBox"
                                      Grid.Column="0"
                                      Content="{x:Static props:Resources.SettingsReviSpecipyProcess}"
                                      IsChecked="{Binding DetectionProcess.Value.IsEnabled.Value}" />
                            <TextBlock Grid.Column="1"
                                       Text=" : " />
                            <telerik:RadComboBox Grid.Column="2"
                                                 Margin="5,0,0,0"
                                                 DisplayMemberPath="Name"
                                                 IsEnabled="{Binding ElementName=useTargetProcessCheckBox,
                                                                     Path=IsChecked}"
                                                 ItemsSource="{Binding DetectionProcess.Value.PossibleCustomFields.Value}"
                                                 SelectedItem="{Binding DetectionProcess.Value.CustomField.Value}">
                                <b:Interaction.Behaviors>
                                    <behaviors1:RadComboBoxNotNullableBehavior />
                                </b:Interaction.Behaviors>
                            </telerik:RadComboBox>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       IsEnabled="{Binding ElementName=useTargetProcessCheckBox,
                                                           Path=IsChecked}"
                                       Style="{StaticResource SettingHelpTextBlockStyle}"
                                       Text="{Binding DetectionProcess.Value.HelpMsg}" />
                        </Grid>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="FirstColumn" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>
                        <CheckBox Grid.Row="0"
                                  Content="{x:Static props:Resources.SettingsReviOutlookIntegration}"
                                  IsChecked="{Binding NeedsOutlookIntegration.Value}" />
                        <TextBlock Grid.Column="1"
                                   Text=" : " />
                        <TextBlock Grid.Column="2"
                                   Style="{StaticResource SettingHelpTextBlockStyle}"
                                   Text="{x:Static props:Resources.SettingsReviOutlookIntegrationMsg}" />
                        <CheckBox Grid.Row="1"
                                  Margin="0,5,0,0"
                                  Content="{x:Static props:Resources.SettingsReviGitIntegration}"
                                  IsChecked="{Binding NeedsGitIntegration.Value}" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Text=" : " />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="2"
                                   Style="{StaticResource SettingHelpTextBlockStyle}"
                                   Text="{x:Static props:Resources.SettingsReviGitIntegrationMsg}" />
                    </Grid>

                    <GroupBox Margin="5,10,0,0"
                              Header="{x:Static props:Resources.SettingsReviOpenTicket}">
                        <StackPanel Orientation="Vertical">
                            <Grid Margin="5,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      SharedSizeGroup="FirstColumn" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="{x:Static props:Resources.SettingsReviTracker}" />
                                <TextBlock Grid.Column="1"
                                           Text=" : " />
                                <telerik:RadComboBox Grid.Column="2"
                                                     Margin="5,0,0,0"
                                                     DisplayMemberPath="Name"
                                                     ItemsSource="{Binding Trackers.Value}"
                                                     SelectedItem="{Binding OpenTracker.Value}">
                                    <b:Interaction.Behaviors>
                                        <behaviors1:RadComboBoxNotNullableBehavior />
                                    </b:Interaction.Behaviors>
                                </telerik:RadComboBox>
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Margin="0,5,0,0"
                                           VerticalAlignment="Center"
                                           Text="{x:Static props:Resources.SettingsReviOpenStatusUnderSelfReview}" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Margin="0,5,0,0"
                                           Text=" : " />
                                <telerik:RadComboBox Grid.Row="1"
                                                     Grid.Column="2"
                                                     Margin="5,5,0,0"
                                                     DisplayMemberPath="Name"
                                                     ItemsSource="{Binding Statuses.Value}"
                                                     SelectedItem="{Binding OpenStatusUnderSelfReview.Value}">
                                    <b:Interaction.Behaviors>
                                        <behaviors1:RadComboBoxNotNullableBehavior />
                                    </b:Interaction.Behaviors>
                                </telerik:RadComboBox>
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Margin="0,5,0,0"
                                           VerticalAlignment="Center"
                                           Text="{x:Static props:Resources.SettingsReviOpenStatus}" />
                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Margin="0,5,0,0"
                                           Text=" : " />
                                <telerik:RadComboBox Grid.Row="2"
                                                     Grid.Column="2"
                                                     Margin="5,5,0,0"
                                                     DisplayMemberPath="Name"
                                                     ItemsSource="{Binding Statuses.Value}"
                                                     SelectedItem="{Binding OpenStatus.Value}">
                                    <b:Interaction.Behaviors>
                                        <behaviors1:RadComboBoxNotNullableBehavior />
                                    </b:Interaction.Behaviors>
                                </telerik:RadComboBox>
                            </Grid>
                            <GroupBox Grid.Row="1"
                                      Margin="0,5,0,0">
                                <GroupBox.Header>
                                    <CheckBox x:Name="useReviewMethodCheckBox"
                                              Content="{x:Static props:Resources.SettingsReviNeedsFaceToFace}"
                                              IsChecked="{Binding ReviewMethod.Value.IsEnabled.Value}" />
                                </GroupBox.Header>
                                <StackPanel IsEnabled="{Binding ElementName=useReviewMethodCheckBox,
                                                                Path=IsChecked}"
                                            Orientation="Vertical"
                                            ToolTip="{Binding ReviewMethod.Value.NoCustomFieldErrMsg.Value}">
                                    <Grid IsEnabled="{Binding ReviewMethod.Value.NoCustomFieldErrMsg.Value, Converter={StaticResource StringIsNullOrEmptyToBooleanConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"
                                                              SharedSizeGroup="FirstColumn" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="AUTO" />
                                            <RowDefinition Height="AUTO" />
                                        </Grid.RowDefinitions>
                                        <CheckBox x:Name="needsSaveNeedsF2FCheckBox"
                                                  Grid.Column="0"
                                                  Content="{x:Static props:Resources.SettingsReviCustomField}"
                                                  IsChecked="{Binding ReviewMethod.Value.NeedsSaveToCustomField.Value}" />

                                        <TextBlock Grid.Column="1"
                                                   Text=" : " />
                                        <telerik:RadComboBox Grid.Column="2"
                                                             Margin="5,0,0,0"
                                                             DisplayMemberPath="Name"
                                                             IsEnabled="{Binding ElementName=needsSaveNeedsF2FCheckBox,
                                                                                 Path=IsChecked}"
                                                             ItemsSource="{Binding ReviewMethod.Value.PossibleCustomFields.Value}"
                                                             SelectedItem="{Binding ReviewMethod.Value.CustomField.Value}">
                                            <b:Interaction.Behaviors>
                                                <behaviors1:RadComboBoxNotNullableBehavior />
                                            </b:Interaction.Behaviors>
                                        </telerik:RadComboBox>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Style="{StaticResource SettingHelpTextBlockStyle}"
                                                   Text="{Binding ReviewMethod.Value.HelpMsg}" />
                                    </Grid>
                                    <TextBlock Margin="0,5,0,0"
                                               Text="{x:Static props:Resources.SettingsReviMethodMsg}"
                                               Visibility="{Binding ElementName=needsSaveNeedsF2FCheckBox,
                                                                    Path=IsChecked,
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <telerik:RadGridView Margin="0,5,0,0"
                                                         AutoGenerateColumns="False"
                                                         CanUserDeleteRows="True"
                                                         CanUserFreezeColumns="False"
                                                         CanUserInsertRows="True"
                                                         GroupRenderMode="Flat"
                                                         IsFilteringAllowed="False"
                                                         IsReadOnly="False"
                                                         ItemsSource="{Binding ReviewMethod.Value.CustomField.Value.PossibleValues}"
                                                         RowIndicatorVisibility="Collapsed"
                                                         ShowGroupPanel="False"
                                                         Visibility="{Binding ElementName=needsSaveNeedsF2FCheckBox,
                                                                              Path=IsChecked,
                                                                              Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <telerik:RadGridView.Columns>
                                            <telerik:GridViewDataColumn DataMemberBinding="{Binding Label}"
                                                                        Header=""
                                                                        IsReadOnly="True" />
                                            <telerik:GridViewDataColumn DataMemberBinding="{Binding NeedsOnDesktop}"
                                                                        EditTriggers="CellClick"
                                                                        Header="{x:Static props:Resources.ReviewMethodDesktop}"
                                                                        IsReadOnly="True"
                                                                        IsSortable="false">
                                                <telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding NeedsOnDesktop, Mode=TwoWay}" />
                                                    </DataTemplate>
                                                </telerik:GridViewDataColumn.CellTemplate>
                                            </telerik:GridViewDataColumn>
                                            <telerik:GridViewDataColumn DataMemberBinding="{Binding NeedsFaceToFace}"
                                                                        EditTriggers="CellClick"
                                                                        Header="{x:Static props:Resources.ReviewMethodFaceToFace}"
                                                                        IsReadOnly="True"
                                                                        IsSortable="false">
                                                <telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding NeedsFaceToFace, Mode=TwoWay}" />
                                                    </DataTemplate>
                                                </telerik:GridViewDataColumn.CellTemplate>
                                            </telerik:GridViewDataColumn>


                                        </telerik:RadGridView.Columns>

                                    </telerik:RadGridView>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5,5,0,0"
                              Header="{x:Static props:Resources.SettingsReviRequestTicket}">
                        <StackPanel Orientation="Vertical">
                            <Grid Margin="5,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      SharedSizeGroup="FirstColumn" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="{x:Static props:Resources.SettingsReviTracker}" />
                                <TextBlock Grid.Column="1"
                                           Text=" : " />
                                <telerik:RadComboBox Grid.Column="2"
                                                     Margin="5,0,0,0"
                                                     DisplayMemberPath="Name"
                                                     ItemsSource="{Binding Trackers.Value}"
                                                     SelectedItem="{Binding RequestTracker.Value}">
                                    <b:Interaction.Behaviors>
                                        <behaviors1:RadComboBoxNotNullableBehavior />
                                    </b:Interaction.Behaviors>
                                </telerik:RadComboBox>
                            </Grid>
                            <GroupBox Grid.Row="1"
                                      Margin="0,5,0,0">
                                <GroupBox.Header>
                                    <CheckBox x:Name="useIsRequiredCheckBox"
                                              Content="{x:Static props:Resources.SettingsReviIsRequired}"
                                              IsChecked="{Binding IsRequired.Value.IsEnabled.Value}" />
                                </GroupBox.Header>
                                <StackPanel IsEnabled="{Binding ElementName=useIsRequiredCheckBox,
                                                                Path=IsChecked}"
                                            Orientation="Vertical"
                                            ToolTip="{Binding IsRequired.Value.NoCustomFieldErrMsg.Value}">
                                    <Grid IsEnabled="{Binding IsRequired.Value.NoCustomFieldErrMsg.Value, Converter={StaticResource StringIsNullOrEmptyToBooleanConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"
                                                              SharedSizeGroup="FirstColumn" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="AUTO" />
                                            <RowDefinition Height="AUTO" />
                                        </Grid.RowDefinitions>
                                        <CheckBox x:Name="needsSaveIsRequiredCheckBox"
                                                  Grid.Column="0"
                                                  Content="{x:Static props:Resources.SettingsReviCustomField}"
                                                  IsChecked="{Binding IsRequired.Value.NeedsSaveToCustomField.Value}" />

                                        <TextBlock Grid.Column="1"
                                                   Text=" : " />
                                        <telerik:RadComboBox Grid.Column="2"
                                                             Margin="5,0,0,0"
                                                             DisplayMemberPath="Name"
                                                             IsEnabled="{Binding ElementName=needsSaveIsRequiredCheckBox,
                                                                                 Path=IsChecked}"
                                                             ItemsSource="{Binding IsRequired.Value.PossibleCustomFields.Value}"
                                                             SelectedItem="{Binding IsRequired.Value.CustomField.Value}">
                                            <b:Interaction.Behaviors>
                                                <behaviors1:RadComboBoxNotNullableBehavior />
                                            </b:Interaction.Behaviors>
                                        </telerik:RadComboBox>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Style="{StaticResource SettingHelpTextBlockStyle}"
                                                   Text="{Binding IsRequired.Value.HelpMsg}" />
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5,5,0,0"
                              Header="{x:Static props:Resources.SettingsReviPointTicket}">
                        <StackPanel Orientation="Vertical">
                            <Grid Margin="5,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      SharedSizeGroup="FirstColumn" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="{x:Static props:Resources.SettingsReviTracker}" />
                                <TextBlock Grid.Column="1"
                                           Text=" : " />
                                <telerik:RadComboBox Grid.Column="2"
                                                     Margin="5,0,0,0"
                                                     DisplayMemberPath="Name"
                                                     ItemsSource="{Binding Trackers.Value}"
                                                     SelectedItem="{Binding PointTracker.Value}">
                                    <b:Interaction.Behaviors>
                                        <behaviors1:RadComboBoxNotNullableBehavior />
                                    </b:Interaction.Behaviors>
                                </telerik:RadComboBox>
                                <CheckBox x:Name="useSaveReviewerCheckBox"
                                          Grid.Row="1"
                                          Grid.Column="0"
                                          Content="{x:Static props:Resources.SettingsReviSaveReviewer}"
                                          IsChecked="{Binding SaveReviewer.Value.IsEnabled.Value}" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Text=" : " />
                                <telerik:RadComboBox Grid.Row="1"
                                                     Grid.Column="2"
                                                     Margin="5,5,0,0"
                                                     DisplayMemberPath="Name"
                                                     IsEnabled="{Binding ElementName=useSaveReviewerCheckBox,
                                                                         Path=IsChecked}"
                                                     ItemsSource="{Binding SaveReviewer.Value.PossibleCustomFields.Value}"
                                                     SelectedItem="{Binding SaveReviewer.Value.CustomField.Value}">
                                    <b:Interaction.Behaviors>
                                        <behaviors1:RadComboBoxNotNullableBehavior />
                                    </b:Interaction.Behaviors>
                                </telerik:RadComboBox>
                                <TextBlock Grid.Row="2"
                                           Grid.Column="2"
                                           IsEnabled="{Binding ElementName=useSaveReviewerCheckBox,
                                                               Path=IsChecked}"
                                           Style="{StaticResource SettingHelpTextBlockStyle}"
                                           Text="{Binding SaveReviewer.Value.HelpMsg}" />

                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <settings:SettingsButtonsPanel Grid.Row="1"
                                           DataContext="{Binding}" />
        </Grid>
    </libCont:OverwrapMessage>

</UserControl>
